<!DOCTYPE html>
<html lang="en" dir="ltr">
  {% include head.liquid %}

  <body class="artist-page">

    {% include nav.liquid %}

    <div class="bio">
      <img class="artist-image" src="{{ page.info.image }}" alt="{{ page.info.name }}">
      <h1 class="artist-name">{{ page.info.name }}</h1>
      {{ content }}
    </div>

    <div class="bg">
      <img class="bg-cloud-01" src="/assets/images/cloud-01.svg" alt="">
      <img class="bg-cloud-02" src="/assets/images/cloud-02.svg" alt="">
      <img class="bg-tree-01" src="/assets/images/tree.svg" alt="">
      <img class="bg-tree-02" src="/assets/images/tree.svg" alt="">
    </div>
  </body>
</html>
